---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ "/" | absolute_url | xml_escape }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>{{ site.lang | default: "en-US" }}</language>

    {% assign recent = site.posts | sort: "date" | reverse | slice: 0, 12 %}
    {% for post in recent %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ post.url | absolute_url | xml_escape }}</link>
      <guid isPermaLink="true">{{ post.url | absolute_url | xml_escape }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>

      {% capture img -%}
        {%- if post.header.og_image -%}
          {{ post.header.og_image | absolute_url }}
        {%- elsif post.header.teaser -%}
          {{ post.header.teaser | absolute_url }}
        {%- elsif post.teaser -%}
          {{ post.teaser | absolute_url }}
        {%- elsif post.image -%}
          {{ post.image | absolute_url }}
        {%- endif -%}
      {%- endcapture %}

      {% if img and img != "" %}
      <media:content url="{{ img | strip | absolute_url }}" medium="image"/>
      <enclosure url="{{ img | strip | absolute_url }}" type="image/jpeg" length="1"/>
      {% endif %}

      <description>
        <![CDATA[
          <h3>{{ post.title }}</h3>
          {{ post.excerpt | markdownify }}
        ]]>
      </description>

    </item>
    {% endfor %}
  </channel>
</rss>
