source "https://rubygems.org"

# Core Engine: The latest 3.x release for maximum stability
gem "jekyll", "~> 3.10"
gem "minimal-mistakes-jekyll"
gem "kramdown-parser-gfm"

# Legacy-friendly Sass engine to prevent layout collapse
gem "jekyll-sass-converter", "~> 1.5"

# Environment Support for Ruby 3.x
gem "tzinfo-data"
gem "webrick"

group :jekyll_plugins do
  gem "jekyll-paginate-v2"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jemoji"
  gem "jekyll-include-cache"
  gem "jekyll-archives"
  gem "jekyll-seo-tag"
  gem "jekyll-redirect-from"
end